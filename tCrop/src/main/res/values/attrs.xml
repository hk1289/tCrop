<resources>

    <declare-styleable name="tcrop_TCropView">

        <!--Crop image view-->
        <attr name="tcrop_aspect_ratio_x" format="float"/>
        <attr name="tcrop_aspect_ratio_y" format="float"/>

        <!--Overlay view-->
        <attr name="tcrop_show_oval_crop_frame" format="boolean"/>
        <attr name="tcrop_circle_dimmed_layer" format="boolean"/>
        <attr name="tcrop_dimmed_color" format="color"/>

        <attr name="tcrop_grid_stroke_size" format="dimension"/>
        <attr name="tcrop_grid_color" format="color"/>
        <attr name="tcrop_grid_row_count" format="integer"/>
        <attr name="tcrop_grid_column_count" format="integer"/>
        <attr name="tcrop_show_grid" format="boolean"/>

        <attr name="tcrop_frame_stroke_size" format="dimension"/>
        <attr name="tcrop_frame_color" format="color"/>
        <attr name="tcrop_show_frame" format="boolean"/>

    </declare-styleable>

    <declare-styleable name="tcrop_AspectRatioTextView">

        <attr name="tcrop_artv_ratio_title" format="string"/>

        <attr name="tcrop_artv_ratio_x" format="float"/>
        <attr name="tcrop_artv_ratio_y" format="float"/>

    </declare-styleable>

</resources>